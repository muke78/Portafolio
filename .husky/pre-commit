#!/bin/sh

# Cargar NVM (necesario en entornos donde Husky no hereda el PATH completo)
export NVM_DIR="$HOME/.nvm"
# Esto carga nvm
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
# Esto carga nvm para bash >=0.4.0
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

echo "ğŸ” Verificando archivos antes del commit..."
echo "ğŸ“¦ Formateando cÃ³digo con Prettier..."

pnpm prettier 'src/**/*.{js,ts,jsx,tsx,json,astro,css}' --write || exit 1

# Agregar los archivos modificados despuÃ©s del formateo
git add .


echo "âœ… Todo listo para el commit. ğŸ‰"
