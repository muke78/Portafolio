---
import 'animate.css';
import "swiper/swiper-bundle.css";
import "../styles/styles.css";
import {dataTitlePage, dataTitlePageEN, dataTitlePageFR}from '@/utils/dataTitlePage';


const pathSegments = Astro.url.pathname.split("/");
const {currentLocale} = Astro;

const titles = currentLocale === 'en' ? dataTitlePageEN :
               currentLocale === 'fr' ? dataTitlePageFR :
               dataTitlePage;


const pageIndex = pathSegments[2] === 'about' ? 1 :
                  pathSegments[2] === 'projects' ? 2 :
                  0;

const titleLang = titles[pageIndex];

function capitalizeFirstLetter(string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}

const capitalizedTitle = capitalizeFirstLetter(titleLang);
---

<!doctype html>
<html lang={currentLocale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{capitalizedTitle}</title>
    <meta name="description" content="Web developer JR - IT Engineer" />
    <!-- Open Graph Meta Tags (para Facebook, LinkedIn, y otras redes) -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://khelde.vercel.app/es/home" />
    <meta property="og:title" content="Portafolio de Erick Gonzalez" />
    <meta property="og:description" content="Portafolio de Erick Gonzalez, desarrollador web junior con experiencia en frontend y backend. Mira mis proyectos y habilidades." />
