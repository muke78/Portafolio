---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/kdl.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
    name="description"
    content="Portafolio"
  />
  </head>
  <body>
    <slot />
  </body>
</html>


<style is:global>
  html {
    scroll-behavior: smooth;
  }

  .hero{
    view-timeline-name: --reveal;
    animation-name: show;
    animation-fill-mode: both;
    animation-timeline: --reveal;
    animation-range: entry -25% cover 50%;
  }
  .sticky-navbar {
    position: sticky;
    top: 0;
    height: 3px;
    z-index: 10; 
  }

  @keyframes show {
    from{
      opacity: 0; scale: -10%;
    }

    to{
      opacity: 1; scale: 100%;
    }
  }
</style>
