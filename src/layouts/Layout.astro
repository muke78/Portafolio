<style is:global>
  html {
    transition:
      background-color 1s ease-out,
      color 1s ease-out;
  }

  .sticky-navbar {
    position: sticky;
    top: 0;
    height: 3px;
  }

  .shadow__cardPulse {
    box-shadow: 0px -20px 200px -400px;
    filter: drop-shadow(0 0 0.75rem);
    transition: box-shadow 3s ease-in-out;
}

.shadow__skew {
  animation: uppcolor 4s ease-in-out;
}

@keyframes uppcolor {
    0% {
        filter: blur(15rem); /* Empieza con un desenfoque alto */
    }
    50% {
        filter: blur(-20rem); /* Desenfoque moderado al llegar a la mitad */
    }
    100% {
        filter: blur(4rem); /* Llega a 0 de desenfoque al final */
    }
}

</style>
