    view-timeline-name: --reveal;
    animation-name: show;
    animation-fill-mode: none;
    animation-timeline: --reveal;
    animation-range: cover -50% entry 25%;
  }

  .sticky-navbar {
    position: sticky;
    top: 0;
    height: 3px;
  }

  @keyframes show {
    from {
      opacity: 0;
      scale: 10%;
    }

    to {
      opacity: 1;
      scale: 100%;
    }
  }

