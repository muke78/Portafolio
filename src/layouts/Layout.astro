    <meta property="og:image:alt" content="Logo de Erick Gonzalez, desarrollador web." />
    <meta property="og:site_name" content="Portafolio Erick Gonzalez" />
    <!-- Twitter Meta Tags -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://khelde.vercel.app/es/home" />
    <meta property="twitter:title" content="Portafolio de Erick Gonzalez" />
    <meta property="twitter:description" content="Portafolio de Erick Gonzalez, desarrollador web junior con experiencia en frontend y backend. Mira mis proyectos y habilidades." />
