    <script defer src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <script>
      (function() {
        const theme = localStorage.getItem("theme") || "nord";
        document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>
      <script src="../js/swup-init.js"></script>
  </body>
</html>
<style is:global>
  .sticky-navbar {
    position: sticky;
    top: 0;
    height: 3px;
  }

  .shadow__skew {
    animation: uppcolor 4s ease-in-out;
  }

  @keyframes uppcolor {
    0% {
      filter: blur(15rem);
    }

    50% {
      filter: blur(-20rem);
    }

