---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/templates/Header.astro';
import Habilidades from '@/components/templates/Habilidades.astro';
import Footer from '@/components/templates/Footer.astro';
import { Nav } from '@/components/organisms/Nav';
const {currentLocale} = Astro;
const currentPath = Astro.url.pathname;
---

<Layout>
  <header class="relative w-full"> 
    <Nav client:load currentLocale={currentLocale} currentPath={currentPath}/>
    <div id="header">
      <Header />
    </div>
    <div id="habilidades">
      <Habilidades />
    </div>
  </header>
  <Footer />
</Layout>

