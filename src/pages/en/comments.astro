---
import Layout from "@/layouts/Layout.astro";
import EnviarOpinion from "@/components/templates/enviarOpinion.astro";
---

<Layout>
  <header class="relative w-full min-h-screen">
    <div class="hero w-full h-screen">
      <svg xmlns="http://www.w3.org/2000/svg" class="fixed inset-0 w-full h-full pointer-events-none" preserveAspectRatio="xMidYMid slice">
        <defs id="pattern" width="20" height="20" patternTransform="rotate(20) scale(2)" patternUnits="userSpaceOnUse">
          <pattern id="a" width="77.308" height="50" patternTransform="scale(2)" patternUnits="userSpaceOnUse">
            <rect width="100%" height="100%" fill="transparent" />
            <path stroke-linecap="round" stroke-linejoin="round" fill="#52bbf457" d="m64.423 25-12.886 9.615-12.881 9.616-.002-.002V50h12.884l12.885-9.615ZM25.769 0 12.883 9.615.003 19.231 0 19.229v11.542l12.885 9.752L25.77 50V34.478L12.884 25l12.884-9.615Zm12.885 0v5.77l12.885 9.753L64.423 25V9.478L51.537 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" fill="#ee77b85e" d="M12.885 25v15.522L25.77 50h12.885v-5.77l-12.886-9.753ZM51.539 0v15.523L64.424 25v15.385l12.88-9.615.005.002V19.229L64.422 9.477ZM25.77 0v15.385h.003l12.88-9.615.002.001V0Z" />
          </pattern>
          <mask id="fadeMask" maskUnits="userSpaceOnUse">
            <rect width="100%" height="100%" fill="url(#fadeGradient)" />
          </mask>
          <linearGradient id="fadeGradient" x1="0" y1="0" x2="1" y2="1">
            <stop offset="0%" stop-color="white" stop-opacity="0.1" />
            <stop offset="50%" stop-color="white" stop-opacity="0.2" />
            <stop offset="100%" stop-color="white" stop-opacity="0.1" />
          </linearGradient>
        </defs>
        <rect width="100%" height="100%" fill="url(#a)" mask="url(#fadeMask)" />
      </svg>
      <EnviarOpinion />
    </div>
  </header>
</Layout>




