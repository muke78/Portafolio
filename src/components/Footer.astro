---
import { getI18N } from '../i18n';
import { ImageContrast } from './islands/ImageContrast';

const v = import.meta.env.VERSION;

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer
  class="footer footer-center bg-gradient-to-tl from-primary to-accent backdrop-blur-[30px] backdrop-saturate-[180%] rounded-t-lg text-base-100 p-7"
>
  <aside>
    <ImageContrast client:load />
    <p class="font-bold flex items-center justify-center">
      {i18n.FOOTER.FOOTER_MAKE}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1.2em"
        height="1em"
        viewBox="0 0 24 24"
      >
        <path
          fill="#d22d2d"
          d="m12 21.35l-1.45-1.32C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5c0 3.77-3.4 6.86-8.55 11.53z"
        ></path>
      </svg>
      {i18n.FOOTER.FOOTER_SEPARATOR} &nbsp;
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1.2em"
        height="1em"
        viewBox="0 0 24 24"
      >
        <path
          fill="#141414"
          d="M2 21h18v-2H2M20 8h-2V5h2m0-2H4v10a4 4 0 0 0 4 4h6a4 4 0 0 0 4-4v-3h2a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2"
        ></path>
      </svg>
      <br />
    </p>
    <div class="flex justify-center items-center">
      <p>{i18n.FOOTER.FOOTER_DESCRIPTION}</p>
    </div>
    <div class="flex justify-center items-center flex-col">
      <img src="/favicon.svg" alt="astro" class="w-9 fill-current" />
      <p class="font-semibold">Version {v}</p>
    </div>
    <p>
      Copyright Â© {new Date().getFullYear()} - {i18n.FOOTER.FOOTER_ALL_RIGHT}
    </p>
    <nav>
      <div class="grid grid-flow-col gap-4">
        <a href="https://github.com/muke78" target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            id="github"
            width="24"
            height="24"
            class="fill-current"
            aria-label="Saber mas acerca de mis repositorios y lo que he hecho"
          >
            <path
              d="M12,2.2467A10.00042,10.00042,0,0,0,8.83752,21.73419c.5.08752.6875-.21247.6875-.475,0-.23749-.01251-1.025-.01251-1.86249C7,19.85919,6.35,18.78423,6.15,18.22173A3.636,3.636,0,0,0,5.125,16.8092c-.35-.1875-.85-.65-.01251-.66248A2.00117,2.00117,0,0,1,6.65,17.17169a2.13742,2.13742,0,0,0,2.91248.825A2.10376,2.10376,0,0,1,10.2,16.65923c-2.225-.25-4.55-1.11254-4.55-4.9375a3.89187,3.89187,0,0,1,1.025-2.6875,3.59373,3.59373,0,0,1,.1-2.65s.83747-.26251,2.75,1.025a9.42747,9.42747,0,0,1,5,0c1.91248-1.3,2.75-1.025,2.75-1.025a3.59323,3.59323,0,0,1,.1,2.65,3.869,3.869,0,0,1,1.025,2.6875c0,3.83747-2.33752,4.6875-4.5625,4.9375a2.36814,2.36814,0,0,1,.675,1.85c0,1.33752-.01251,2.41248-.01251,2.75,0,.26251.1875.575.6875.475A10.0053,10.0053,0,0,0,12,2.2467Z"
