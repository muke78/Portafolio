---
import { getI18N } from '@/i18n';
import Parabola from '@/components/atoms/Parabola.astro';
import Bubble from '../atoms/Bubble.astro';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<div class="hero-content flex-col lg:flex-row-reverse">
  <Bubble
  class="top-40 lg:top-72 left-0 bg-primary"
  classNameToBottom="bottom-80 right-36 bg-accent"
/>
  <div class="avatar">
      <div class="ring-primary ring-offset-base-100 w-[250px] md:w-[450px] rounded-full ring-4 border-dashed ring-offset-8">
          <img src="/yop.webp" alt="muke78" />
      </div>
  </div>
  <div class="flex flex-col justify-evenly lg:p-14 md:p-8 p-4">
      <span class="text-3xl font-light block text-center md:text-center lg:text-start">{i18n.HEADER.HEADER_SUBTITLE}</span>
      <h1 class="text-6xl xl:text-8xl md:text-8xl font-bold text-nowrap text-center md:text-center lg:text-start"> {i18n.HEADER.HEADER_TITLE} </h1>
      <span class="text-7xl xl:text-8xl md:text-8xl text-center md:text-center lg:text-start leading-snug font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-accent"> {i18n.HEADER.HEADER_NAME} </span>
      <p class="text-xl font-semibold text-base-content text-center md:text-center lg:text-start my-8"> {i18n.HEADER.HEADER_ABOUT} </p>
      <!-- Botones -->
      <div class="flex flex-col md:flex-row justify-center md:justify-around gap-2 mt-8">
          <div class="w-full md:w-1/2">
              <a href={`/${currentLocale}/projects`} class="btn btn-primary w-full">{i18n.HEADER.HEADER_BUTTON}</a>
          </div>
          <div class="w-full md:w-1/2">
              <a href="https://docs.google.com/viewer?url=https://khelde.vercel.app/CV_Erick_Miguel_Gonzalez_Rivera.pdf" target="_blank" class="btn btn-primary btn-outline w-full" aria-label="Ver cv para saber mas acerca de mi"> {i18n.ABOUTME.ABOUT_DOWNLOAD_CV} </a>
          </div>
      </div>
      <div class="flex justify-center md:justify-center lg:justify-start mt-4 gap-4">
          <a href="https://github.com/muke78" target="_blank" aria-label="Saber mas acerca de mis repositorios y lo que he hecho">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="github" width="42" height="42" class="fill-current">
