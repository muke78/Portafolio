---
import { getI18N } from '@/i18n';
import Bubble from '@/components/atomos/Bubble.astro';
import { ModalWork } from '@/components/moleculas/ModalWork';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="hero min-h-screen">
  <div class="hero-content text-center ">
    <Bubble
      class="top-40 lg:top-72 left-0 bg-primary"
      classNameToBottom="bottom-80 right-36 bg-accent"
    />
    <div class="max-w-7xl ">
      <div>
        <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold mt-20 mb-36 animate__animated animate__zoomIn">
          {i18n.ABOUTME.ABOUT_TITLE}
        </h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 lg:grid-rows-2 gap-4 sm:p-0 md:p-1 lg:p-4 animate__animated animate__zoomIn">
        <div class="lg:col-span-2 lg:row-span-3">
          <div class="avatar px-3">
            <div
              class="ring-primary ring-offset-base-100 w-72 md:w-80 lg:w-96 rounded-full ring ring-offset-4"
            >
              <img src="/yop.webp" alt="muke78" loading="lazy" />
            </div>
          </div>

          <div class="flex justify-center items-center mt-8 gap-4">
            <a
              href="https://github.com/muke78"
              target="_blank"
              aria-label="Saber mas acerca de mis repositorios y lo que he hecho"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                id="github"
                width="64"
                height="64"
                class="fill-current"
              >
                <path
                  d="M12,2.2467A10.00042,10.00042,0,0,0,8.83752,21.73419c.5.08752.6875-.21247.6875-.475,0-.23749-.01251-1.025-.01251-1.86249C7,19.85919,6.35,18.78423,6.15,18.22173A3.636,3.636,0,0,0,5.125,16.8092c-.35-.1875-.85-.65-.01251-.66248A2.00117,2.00117,0,0,1,6.65,17.17169a2.13742,2.13742,0,0,0,2.91248.825A2.10376,2.10376,0,0,1,10.2,16.65923c-2.225-.25-4.55-1.11254-4.55-4.9375a3.89187,3.89187,0,0,1,1.025-2.6875,3.59373,3.59373,0,0,1,.1-2.65s.83747-.26251,2.75,1.025a9.42747,9.42747,0,0,1,5,0c1.91248-1.3,2.75-1.025,2.75-1.025a3.59323,3.59323,0,0,1,.1,2.65,3.869,3.869,0,0,1,1.025,2.6875c0,3.83747-2.33752,4.6875-4.5625,4.9375a2.36814,2.36814,0,0,1,.675,1.85c0,1.33752-.01251,2.41248-.01251,2.75,0,.26251.1875.575.6875.475A10.0053,10.0053,0,0,0,12,2.2467Z"
                ></path>
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/in/erick-miguel-gonz%C3%A1lez-rivera-96265b248/"
              target="_blank"
              aria-label="Saber mas acerca de experiencia"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                id="github"
                width="64"
                height="64"
                class="fill-current"
              >
                <path
                  d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <div class="lg:col-span-2 lg:col-start-3">
          <div
            class="rounded-lg py-5 card"
          >
            <div class="card-body">
              <p class="font-medium">
                {i18n.ABOUTME.ABOUT_ABOUT_DESCRIPTION}
              </p>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 lg:col-start-3 lg:row-start-2">
          <div
            class="bg-transparent stats stats-horizontal rounded-lg py-5 w-full"
          >
            <div class="stat p-1">
              <div class="stat-value">+2</div>
              <div class="">{i18n.ABOUTME.ABOUT_EXPIRENCE[0].EXPIRENCE}</div>
              <div class="stat-desc">
                {i18n.ABOUTME.ABOUT_EXPIRENCE[0].EXPIRENCE_ABOUT}
              </div>
            </div>
            <div class="stat p-1">
              <div class="stat-value">+7</div>
              <div class="">{i18n.ABOUTME.ABOUT_EXPIRENCE[1].PROJECTS}</div>
              <div class="stat-desc">
                {i18n.ABOUTME.ABOUT_EXPIRENCE[1].PROJECTS_ABOUT}
              </div>
            </div>
            <div class="stat p-1 flex items-center justify-center flex-col">
               <ModalWork currentLocale={currentLocale} client:load/>
              <div class="">{i18n.ABOUTME.ABOUT_EXPIRENCE[2].WORKING}</div>
              <div class="stat-desc">
                {i18n.ABOUTME.ABOUT_EXPIRENCE[2].WORKING_ABOUT}
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 lg:col-start-3 lg:row-start-2 lg:mt-44">
          <a
          href="https://docs.google.com/viewer?url=https://khelde.vercel.app/CV_Erick_Miguel_Gonzalez_Rivera.pdf"
          target="_blank"
          class="btn btn-primary w-full"
          aria-label="Ver cv para saber mas acerca de mi"
        >
          {i18n.ABOUTME.ABOUT_DOWNLOAD_CV}
        </a>
        </div>
      </div>
    </div>
  </div>
</div>
